{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nuxt 4 Debug (nuxi)",
      "program": "${workspaceFolder}/node_modules/.bin/nuxi",
      "args": [
        "dev"
      ],
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect=9230"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}